<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#BFBFBF"
    android:padding="10dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvBalance"
        android:background="#888787"
        android:padding="10dp"
        android:text=""
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="197dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvBalance"
        app:layout_constraintBottom_toTopOf="@id/llVertical"
        app:layout_editor_absoluteX="10dp"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/rvProcess"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/llVertical"
        app:layout_editor_absoluteX="207dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="#888787"
            >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:ems="10"
                android:hint="Amount"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="#CCC9C9"
                android:id="@+id/etDeposit"
                />
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btDeposit"
                android:text="DEPOSIT"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="#888787"
            >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:ems="10"
                android:hint="Amount"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="#CCC9C9"
                android:id="@+id/etWithdraw"
                />
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btTWithdraw"
                android:text="WITHDRAW"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>